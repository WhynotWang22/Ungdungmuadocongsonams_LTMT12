<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activity.ChangePasswordActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_number"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/btnback_add_address"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/btnback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/interbold"
            android:text="Thêm địa chỉ"
            android:textColor="@color/mauchu"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="855dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_number"
        app:layout_constraintVertical_bias="0.5"
        android:layout_below="@+id/relativeLayout_number">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/ed_name_addaddress"
            android:hint="Tên người nhận"
            android:background="@drawable/bg_ed_pass"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="26dp"
            android:inputType="textPersonName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/ed_sdt_addaddress"
            android:hint="Số điện thoại"
            android:background="@drawable/bg_ed_pass"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="17dp"
            android:inputType="phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/ed_address_addaddress"
            android:hint="Địa chỉ"
            android:background="@drawable/bg_ed_pass"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="17dp"
            android:inputType="textPostalAddress"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/btn_add_address"
        android:text="Thêm địa chỉ"
        android:background="@drawable/bg_button"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/interbold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp" />
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit_add_address"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/color_progressbar"
        android:layout_centerInParent="true" />
</RelativeLayout>