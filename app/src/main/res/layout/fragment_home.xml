<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:background="@color/mau_xam">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:id="@+id/layout1"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/playfairdisplay_bold"
                android:text="MOF"
                android:textSize="24dp" />
            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btnsearch"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="32dp"
                android:background="@color/mau_xam"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_search"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true">
                <AutoCompleteTextView
                    android:id="@+id/ed_search"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:src="@drawable/btnsearch"
                    android:hint="Tìm kiếm"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/intermedium"
                    android:background="@drawable/bg_ed_search"/>
                <ImageButton
                    android:id="@+id/btn_close_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/close"
                    android:background="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_imgslide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp">
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/img_slidebanner"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_centerHorizontal="true"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_danhmuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:text="Danh mục"
            android:textColor="@color/mauchu"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/cardview_imgslide"
            android:textSize="18dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_view_danhmuc"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_below="@+id/tv_danhmuc"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_duocdexuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interbold"
            android:text="Top 10 sản phẩm bán chạy"
            android:textColor="@color/mauchu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/rc_view_danhmuc"
            android:textSize="18dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_view_aopolo"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/tv_duocdexuat"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tv_aopolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/interbold"
            android:text="Được Đề Xuất Cho Bạn"
            android:textColor="@color/mauchu"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/rc_view_aopolo"
            android:textSize="18dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_view_duocdexuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_aopolo"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="100dp"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
