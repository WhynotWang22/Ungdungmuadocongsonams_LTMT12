<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:orientation="horizontal"

    android:id="@+id/liner_noti"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="71dp"
            android:src="@drawable/product"
            android:id="@+id/img_noti"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_id_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Order : 27122002"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/mauchu"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/tv_time_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03.21 PM"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/mauchu"
                android:textSize="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Order is on the way"
            android:fontFamily="@font/interbold"
            android:textColor="@color/mauchu"
            android:textSize="12dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_desc_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our courier is on his way. please be patient to wait until your order arrives."
            android:fontFamily="@font/intermedium"
            android:textColor="@color/mauchu2"
            android:textSize="10dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>