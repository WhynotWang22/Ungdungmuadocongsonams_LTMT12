        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_marginTop="64dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:drawableStart="@drawable/address1"
                android:id="@+id/edt_email_dangnhap"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                android:background="@drawable/bg_ed_pass"
                android:hint="  Emai " />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:drawableStart="@drawable/email"
                android:id="@+id/edt_matkhau_dangnhap"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/bg_ed_pass"
                android:hint="  Mật khẩu" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="227dp"
            android:fontFamily="@font/interbold"
            android:text="Quên mật khẩu?"
            android:textColor="@color/mauchu"
            android:textSize="14dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/btn_login"
            android:text="Đăng nhập"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="60dp"

            android:textSize="16dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/interbold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="62dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/intermedium"
            android:text="hoặc tiếp tục với"
            android:textColor="@color/mauchu"
            android:textSize="16dp"
            android:layout_marginTop="-40dp"/>

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="15dp"

                android:layout_marginBottom="5dp"

                android:background="@drawable/vu"


                android:textAllCaps="false"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_google"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="5dp"

                android:background="@drawable/google1"



                 />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="90dp"
                android:fontFamily="@font/intermedium"
                android:text="Không có tài khoản?"
                android:textColor="@color/mauchu"
                android:textSize="16dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interbold"

                android:text="Đăng kí"
                android:textColor="@color/mauchu"
                android:textSize="16dp"
                android:layout_marginTop="30dp"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>