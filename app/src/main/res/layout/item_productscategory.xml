<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_ItemClickDetail"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:layout_marginLeft="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_productcategory"
            android:layout_width="187dp"
            android:layout_height="187dp"
            android:scaleType="centerCrop"
            android:src="@drawable/product"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_title_productcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/intermedium"
                android:text="Adidas"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/mauchu"
                android:textSize="14dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/layout_price_category">
                <TextView
                    android:id="@+id/tv_price_productcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/intermedium"
                    android:text="Price"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_do"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/intermedium"
                    android:text="Đã bán 999"
                    android:id="@+id/tv_productcatagory_daban"
                    android:textColor="@color/mauchu"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>