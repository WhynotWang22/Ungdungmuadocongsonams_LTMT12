<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orderfailed"
    tools:context=".activity.OrderFailed_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_marginTop="420dp"
        android:orientation="vertical"
        android:background="@drawable/bg_mo">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/interbold"
            android:text="Xin lỗi, giao dịch của bạn không thành công"

            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="32dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"

            android:text="Oops! Đã xảy ra lỗi."

            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"

            android:text="Hãy thử lại sau để tiếp tục đặt hàng của bạn."

            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/btn_login"
            android:text="Thử lại"
            android:background="@drawable/bg_ed_pass"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"

            android:textSize="16dp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/interbold"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"

            android:text="Quay trở lại sau "

            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="30.5dp"/>

    </LinearLayout>


</LinearLayout>