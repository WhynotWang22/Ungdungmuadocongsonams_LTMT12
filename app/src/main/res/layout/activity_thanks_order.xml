<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.ThanksOrder_Activity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="300dp"
            android:layout_height="250dp"
            app:lottie_url="https://assets1.lottiefiles.com/packages/lf20_Vwcw5D.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/interbold"
            android:text="Cảm ơn bạn đã đặt hàng"
            android:textColor="@color/mauchu"
            android:textSize="16dp" />
        <TextView
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Đơn đặt hàng của bạn đã đặt hàng thành công. Cảm ơn bạn đã mua sắm."
            android:textColor="@color/mauchu"
            android:textSize="14dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_tieptucmuasam"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_button_order_succes"
            android:fontFamily="@font/intermedium"
            android:text="Tiếp tục mua sắm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <Button
            android:id="@+id/btn_xemdonhang"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_button_order_succes"
            android:fontFamily="@font/intermedium"
            android:text="Xem đơn hàng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginBottom="64dp"/>
    </LinearLayout>
</RelativeLayout>