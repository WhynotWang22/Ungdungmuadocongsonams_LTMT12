<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_checkout"
    tools:context=".activity.CommentActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout_comment"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/btnback_comment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:background="@color/white"
            android:src="@drawable/btnback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/interbold"
            android:text="Bình Luận"
            android:textColor="@color/mauchu"
            android:textSize="16dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ln_comment1"
        android:layout_width="311dp"
        android:layout_height="120dp"
        android:layout_below="@+id/relativeLayout_comment"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        tools:ignore="Orientation">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interbold"
                android:text="4.8"
                android:textColor="@color/mauchu"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interbold"
                android:text="/5"
                android:textColor="@color/mauchu"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:orientation="vertical">
            <RatingBar
                android:progressTint="@color/rating"
                android:id="@+id/ratingbar_cmt1"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/rating_5"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5" />
            <TextView
                android:id="@+id/tv_dem_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86 reviews"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-80dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="210dp"
            android:layout_height="match_parent">
           <LinearLayout
              android:layout_marginTop="2dp"
               android:layout_width="35dp"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="5 stars"
                   android:textSize="10dp"
                   android:fontFamily="@font/intermedium"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="4 stars"
                   android:textSize="10dp"
                   android:fontFamily="@font/intermedium"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="3 stars"
                   android:textSize="10dp"
                   android:fontFamily="@font/intermedium"/>
               <TextView
                   android:layout_marginTop="2dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2 stars"
                   android:textSize="10dp"
                   android:fontFamily="@font/intermedium"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1 stars"
                   android:textSize="10dp"
                   android:fontFamily="@font/intermedium"/>
           </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:progressTint="@color/rating"
                    android:id="@+id/progress_5"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="50" />
                <ProgressBar
                    android:progressTint="@color/rating"
                    android:id="@+id/progress_4"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="50" />
                <ProgressBar
                    android:progressTint="@color/rating"
                    android:id="@+id/progress_3"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="50" />
                <ProgressBar
                    android:progressTint="@color/rating"
                    android:id="@+id/progress_2"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="50" />
                <ProgressBar
                    android:progressTint="@color/rating"
                    android:id="@+id/progress_1"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rating_5"
                    android:progress="50" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76"
                    android:textSize="10dp"
                    android:id="@+id/tv_demsao5"
                    android:fontFamily="@font/intermedium"/>

                <TextView
                    android:id="@+id/tv_demsao4"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/intermedium"
                    android:text="8"
                    android:textSize="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginTop="2dp"
                    android:textSize="10dp"
                    android:id="@+id/tv_demsao3"
                    android:fontFamily="@font/intermedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_demsao2"
                    android:fontFamily="@font/intermedium"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="10dp"
                    android:id="@+id/tv_demsao1"
                    android:fontFamily="@font/intermedium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_below="@+id/ln_comment1"
     android:layout_height="match_parent"
     android:orientation="vertical">
     <androidx.recyclerview.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/rc_comment"/>
 </LinearLayout>
</RelativeLayout>