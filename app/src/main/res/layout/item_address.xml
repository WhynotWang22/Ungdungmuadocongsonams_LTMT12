<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mode="same_level"
    app:dragEdge="right"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="#E53935"
        android:layout_gravity="right"
        android:id="@+id/layout_delete_item_address"
        android:layout_width="100dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:src="@drawable/icon_delete"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        android:id="@+id/liner_noti"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/diachi2"
            android:id="@+id/img_noti"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_name_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/mauchu"
                android:textSize="14dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_sdt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/mauchu2"
                android:textSize="12dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_diachi_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/mauchu2"
                android:textSize="12dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>