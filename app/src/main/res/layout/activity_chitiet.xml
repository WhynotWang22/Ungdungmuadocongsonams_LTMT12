<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".activity.ReviewActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout_chitiet"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">

                <ImageView
                    android:id="@+id/btnback_chitiet"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/btnback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/interbold"
                    android:text="Chi tiết sản phẩm"
                    android:textColor="@color/mauchu"
                    android:textSize="16dp" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_img"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_below="@+id/relativeLayout_chitiet"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                app:cardCornerRadius="48dp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_img"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_product_chitiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:text="Adidas Terrex Graphic Tee"
                        android:textColor="@color/mauchu"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/intermedium"
                            android:text="86 Đánh giá"
                            android:textColor="@color/mauxam"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_yeuthich"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_like" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_price_product_chitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="32dp"
                android:fontFamily="@font/interbold"
                android:text="500.000d"
                android:textColor="@color/mauchu"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvmau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price_product_chitiet"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="32dp"
                android:fontFamily="@font/intermedium"
                android:text="Màu"
                android:textColor="@color/mauchu"
                android:textSize="14dp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvmau"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="32dp"
                android:checkedButton="@id/color_white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/color_black"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="12dp"

                    android:button="@android:color/transparent"
                    android:padding="5dp" />

                <RadioButton
                    android:id="@+id/color_white"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_color_white"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_color_xam"
                    android:button="@android:color/transparent" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="32dp"
                android:fontFamily="@font/intermedium"
                android:text="Size"
                android:textColor="@color/mauchu"
                android:textSize="14dp" />

            <RadioGroup
                android:id="@+id/radioGroup_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_size"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="32dp"
                android:checkedButton="@id/size_s"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/size_s"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/radio_size_select"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/intermedium"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="S"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/size_m"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/radio_size_select"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/intermedium"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="M"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/size_l"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/radio_size_select"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/intermedium"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="L"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/size_xl"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/radio_size_select"
                    android:button="@android:color/transparent"
                    android:fontFamily="@font/intermedium"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="XL"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </RadioGroup>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_themsanpham"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/interbold"
            android:text="Thêm vào giỏ hàng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>